### Settings from original zathurarc ###
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print
map g goto top

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#d5d5ce'
set completion-bg '#17201f'

# Command line completion group elements
set completion-group-fg '#B69A65'
set completion-group-bg '#17201f'

# Current command line completion element
set completion-highlight-fg '#17201f'
set completion-highlight-bg '#d5d5ce'

# Default foreground/background color
set default-bg rgba(23,32,31,0.8)

# Input bar
set inputbar-fg '#d5d5ce'
set inputbar-bg '#17201f'

# Notification
set notification-fg '#d5d5ce'
set notification-bg '#17201f'

# Error notification
set notification-error-fg '#d5d5ce'
set notification-error-bg '#988C6F'

# Warning notification
set notification-warning-fg '#d5d5ce'
set notification-warning-bg '#988C6F'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#d5d5ce'
set statusbar-bg '#17201f'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#B69A65'
set highlight-active-color '#B69A65'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#d5d5ce'

# 'Loading...' text
set render-loading-fg '#d5d5ce'
set render-loading-bg '#17201f'

# Index mode
set index-fg '#d5d5ce'
set index-bg '#17201f'

# Selected element in index mode
set index-active-fg '#17201f'
set index-active-bg '#d5d5ce'